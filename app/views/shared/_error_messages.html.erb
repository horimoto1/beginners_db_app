<% if object.errors.any? %>
  <div class="error_explanation">
    <p>
      <%= "#{object.errors.count}個のエラーがあります" %>
    </p>
    <div class="error_list">
      <ul>
        <% object.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>