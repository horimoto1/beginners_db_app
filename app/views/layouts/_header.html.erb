<header>
  <div class="header-wrapper">
    <div class="header-container">
      <div class="header-logo">
        <%= link_to root_path do %>
          <span class="fa fa-database"></span>
          DB入門
        <% end %>
      </div>

      <%= render "shared/search_form" %>
    </div>
  </div>

  <div class="search-form-icon">
    <input type="checkbox" id="search-form-toggle">
    <label for="search-form-toggle"></label>
  </div>

  <div class="side-menu">
    <input type="checkbox" id="side-menu-toggle">
    <label for="side-menu-toggle"><span class="fa fa-bars"></span></label>
    <div class="side-menu-list">
      <ul>
        <%= render "layouts/header_menu_list" %>
      </ul>
    </div>
  </div>

  <% if user_signed_in? %>
    <%= render "shared/edit_menu" %>
  <% end %>

  <div class="menu-bar-wrapper">
    <div class="menu-bar">
      <ul>
        <%= render "layouts/header_menu_list" %>
      </ul>
    </div>
  </div>
</header>
