<div class="main-wrapper">
  <div class="main">
    <%= render "shared/main_header", object: @article %>

    <div class="clear"></div>

    <div class="heading">
      <h1><%= @article.title %></h1>
      <%= simple_format(@article.summary) %>
    </div>

    <div class="toc">
      <p>目次</p>
      <%= check_box_tag("toc-toggle") %>
      <%= label_tag("toc-toggle", "") %>
      <div class="toc-table">
        <%= toc(@article.content) %>
      </div>
    </div>

    <div class="article-content">
      <%= markdown(@article.content) %>
    </div>

    <%= render "shared/main_footer", previous_object: @previous_article,
                                     next_object: @next_article %>

    <div class="clear"></div>
  </div>
</div>