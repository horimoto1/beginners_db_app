<% provide(:title, @article.title) %>
<%= render "shared/main_header", object: @article %>

<div class="clear"></div>

<% if user_signed_in? %>
  <div class="action-menu">
    <ul class="left-list">
      <li>
        <%= link_to "記事編集", edit_category_article_path(@category, @article) %>
      </li>
    </ul>
    <ul class="right-list">
      <li>
        <%= link_to "記事削除", category_article_path(@category, @article),
                    method: :delete, data: { confirm: "Are you sure?" } %>
      </li>
    </ul>
  </div>

  <div class="clear"></div>
<% end %>

<div class="heading">
  <h1><%= @article.title %></h1>
  <%= simple_format(@article.summary) %>
</div>

<div class="toc">
  <p>目次</p>
  <%= check_box_tag("toc-toggle") %>
  <%= label_tag("toc-toggle", "") %>
  <div class="toc-table">
    <%= toc(@article.content) %>
  </div>
</div>

<div class="content">
  <%= markdown(@article.content) %>
</div>

<%= render "shared/main_footer", previous_object: @previous_article,
                                 next_object: @next_article %>

<div class="clear"></div>