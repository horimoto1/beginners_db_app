<% provide(:title, @article.title) %>

<%= render "shared/breadcrumb", object: @article %>

<% if user_signed_in? %>
  <div class="action-menu">
    <ul class="left-list">
      <li>
        <%= link_to "記事編集", edit_category_article_path(@category, @article) %>
      </li>
    </ul>
    <ul class="right-list">
      <li>
        <%= link_to "記事削除", category_article_path(@category, @article),
                  method: :delete, data: { confirm: "本当に削除しますか？" } %>
      </li>
    </ul>
  </div>
  <div class="clear"></div>
<% end %>

<div class="heading">
  <h1><%= @article.title %></h1>
  <%= markdown(@article.summary) %>
</div>

<%= render "shared/meta", object: @category %>

<div class="clear"></div>

<div class="toc">
  <p>目次</p>
  <%= check_box_tag("toc-toggle") %>
  <%= label_tag("toc-toggle", "") %>
  <div class="toc-table">
    <%= toc(@article.content) %>
  </div>
</div>

<div class="content">
  <%= markdown(@article.content) %>
</div>

<%= render "shared/pager", previous_object: @previous_article,
                           next_object: @next_article %>

<div class="clear"></div>
